{
  "name": "file-template",
  "displayName": "File Template",
  "description": "Create custom file templates and quickly generate files with parameters.",
  "version": "1.0.0",
  "publisher": "Jo4Lin",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": ">=1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:file-template.createFileFromTemplate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-template.createFileFromTemplate",
        "title": "New File from Template"
      },
      {
        "command": "file-template.importTemplates",
        "title": "Import File Templates"
      },
      {
        "command": "file-template.exportTemplates",
        "title": "Export File Templates"
      },
      {
        "command": "file-template.manageTemplates",
        "title": "Manage File Templates"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "file-template.createFileFromTemplate",
          "when": "explorerResourceIsFolder",
          "group": "navigation@10"
        }
      ],
      "commandPalette": [
        {
          "command": "file-template.importTemplates",
          "when": "true",
          "group": "navigation@12"
        },
        {
          "command": "file-template.exportTemplates",
          "when": "true",
          "group": "navigation@13"
        },
        {
          "command": "file-template.manageTemplates",
          "when": "true",
          "group": "navigation@11"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "File Template",
      "properties": {
        "fileTemplate.templates": {
          "type": "array",
          "description": "Custom file template configuration array. Add, edit, or delete templates here.\n[Manage Templates](command:file-template.manageTemplates)",
          "markdownDescription": "Custom file template configuration array. Add, edit, or delete templates here.\n[Manage Templates](command:file-template.manageTemplates)\n\n[Import Templates](command:file-template.importTemplates) | [Export Templates](command:file-template.exportTemplates)",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "description": "Template name" },
              "description": { "type": "string", "description": "Template description (optional, shown in management UI)" },
              "parameters": {
                "type": "array",
                "description": "Parameter configuration array, each parameter is an object supporting name/description/required fields.",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string", "description": "Parameter name" },
                    "description": { "type": "string", "description": "Parameter description (optional)" },
                    "required": { "type": "boolean", "description": "Required or not, default true" }
                  },
                  "required": ["name"]
                }
              },
              "parameterDescriptions": { "type": "array", "items": { "type": "string" }, "description": "Parameter description array (corresponds to parameters, shown in management UI)" },
              "parameterRequired": { "type": "array", "items": { "type": "boolean" }, "description": "Parameter required array (corresponds to parameters, true=required, false=optional)" },
              "template": { "type": "string", "description": "Template content, supports JS logic" },
              "fileName": { "type": "string", "description": "Output file name, supports parameter variables" }
            },
            "required": ["name", "parameters", "template", "fileName"]
          },
          "default": []
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "typescript": "^4.4.3",
    "eslint": "^7.32.0",
    "@types/node": "^14.17.6",
    "vsce": "^2.4.2"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/JO4LIN/resource.git"
  },
  "author": "Jo4 Lin"
} 